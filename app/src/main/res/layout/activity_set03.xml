<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Set01Activity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            >
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/img_back2"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                android:tint="@color/color_blank2"
                />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="低温保护"
                android:textSize="@dimen/sp_20"
                android:textColor="#333333"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_below="@+id/rl_head"
            android:id="@+id/rl_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_wifi"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开关"
                    android:textColor="@color/color_blank4"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <ImageView
                    android:id="@+id/img_state"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_40"
                    android:src="@mipmap/img_close"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerInside"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置值"
                    android:textColor="@color/color_blank4"
                    android:textSize="@dimen/sp_18"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <TextView
                    android:id="@+id/tv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="5"
                    android:textColor="@color/color_orange"
                    android:textSize="@dimen/sp_18"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开启"
                    android:layout_toRightOf="@id/tv_left"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_13"
                    android:layout_marginLeft="@dimen/dp_5"
                    />
                <TextView
                    android:id="@+id/tv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关闭"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_13"
                    android:layout_alignParentRight="true"
                    />
                <TextView
                    android:id="@+id/tv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_close"
                    android:text="10"
                    android:textColor="@color/color_orange"
                    android:textSize="@dimen/sp_18"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_5"
                    />
            </RelativeLayout>
            <com.jaygoo.widget.RangeSeekBar
                android:layout_marginTop="@dimen/dp_15"
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:rsb_max="10"
                app:rsb_min="5"
                app:rsb_mode="range"
                app:rsb_progress_color="@color/color_orange"
                app:rsb_progress_default_color="@color/gray"
                app:rsb_progress_height="@dimen/dp_10"
                app:rsb_thumb_drawable="@mipmap/button"
                app:rsb_thumb_size="@dimen/dp_40"
                app:rsb_tick_mark_mode="other"
                app:rsb_tick_mark_text_margin="14dp"
                app:rsb_indicator_radius="@dimen/dp_10"
                app:rsb_tick_mark_text_size="18sp"
                android:layout_marginBottom="@dimen/dp_10"
                />

        </LinearLayout>
        <Button
            android:id="@+id/btn_submit"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_below="@+id/rl_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_submit"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>