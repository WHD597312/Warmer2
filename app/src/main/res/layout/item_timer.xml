<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/rl_timer"
        android:layout_height="@dimen/dp_70"
        android:layout_width="match_parent"
        android:background="@drawable/shape_timer"
        >
        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            />
            <TextView
                android:layout_toRightOf="@+id/tv_count"
                android:layout_marginLeft="@dimen/dp_65"
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="开"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                />
            <TextView
                android:layout_toRightOf="@+id/tv_state"
                android:id="@+id/tv_timer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="00:00"
                android:textColor="@color/color_orange"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                />


            <TextView
                android:layout_toRightOf="@+id/tv_timer"
                android:id="@+id/tv_temp2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="温度"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp_30"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                />
            <TextView
                android:layout_toRightOf="@+id/tv_temp2"
                android:id="@+id/tv_temp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0℃"
                android:textColor="@color/color_orange"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                />
    </RelativeLayout>
</RelativeLayout>