<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddDeviceActivity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <RelativeLayout
           android:id="@+id/rl_head"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_50">
           <ImageView
               android:id="@+id/img_back"
               android:layout_width="@dimen/dp_40"
               android:layout_height="@dimen/dp_40"
               android:src="@mipmap/img_back"
               android:scaleType="centerInside"
               android:layout_centerVertical="true"
               />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_40"
               android:layout_centerVertical="true"
               android:text="WIFI添加"
               android:textSize="@dimen/sp_16"
               android:gravity="center"
               android:textColor="#333333"
               android:textStyle="bold"
               />
       </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_below="@+id/rl_head"
            android:id="@+id/rl_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_wifi"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            >
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                android:text="WiFi:"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_16"
                />
            <TextView
                android:id="@+id/tv_wifi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_toRightOf="@+id/tv_name"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_10"
                android:hint="Wifi名称"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_blank4"
                />
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/tv_wifi"
                android:background="@color/gray"
                />
            <TextView
                android:layout_below="@+id/view"
                android:id="@+id/tv_name2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                android:text="密码:"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_16"
                />
            <EditText
                android:id="@+id/et_pswd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:hint="请输入密码"
                android:background="@null"
                android:layout_below="@+id/view"
                android:layout_toRightOf="@+id/tv_name2"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_blank4"
                />
        </RelativeLayout>
       <RelativeLayout
           android:layout_marginTop="@dimen/dp_15"
           android:layout_below="@+id/rl_middle"
           android:id="@+id/rl_bottom"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/tv_tip"
               android:layout_width="@dimen/dp_12"
               android:layout_height="@dimen/dp_12"
               android:background="#999999"
               android:layout_marginLeft="@dimen/dp_15"
               android:layout_centerVertical="true"
               />
           <TextView
               android:id="@+id/tv_tip2"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_25"
               android:layout_toRightOf="@+id/tv_tip"
               android:text="手机设置先连接WiFi,在此界面输入WiFi密码"
               android:gravity="center_vertical"
               android:layout_centerVertical="true"
               android:layout_marginLeft="@dimen/dp_10"
               />
       </RelativeLayout>
       <RelativeLayout
           android:layout_marginTop="@dimen/dp_15"
           android:layout_below="@+id/rl_bottom"
           android:id="@+id/rl_bottom2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/tv_tip3"
               android:layout_width="@dimen/dp_12"
               android:layout_height="@dimen/dp_12"
               android:background="#999999"
               android:layout_marginLeft="@dimen/dp_15"
               android:layout_centerVertical="true"
               />
           <TextView
               android:id="@+id/tv_tip4"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_25"
               android:layout_toRightOf="@+id/tv_tip3"
               android:text="对设备进行重置后,点击连接"
               android:gravity="center_vertical"
               android:layout_centerVertical="true"
               android:layout_marginLeft="@dimen/dp_10"
               />
       </RelativeLayout>
       <Button
           android:id="@+id/btn_match"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_45"
           android:layout_below="@+id/rl_bottom2"
           android:layout_marginTop="@dimen/dp_20"
           android:layout_marginLeft="@dimen/dp_25"
           android:layout_marginRight="@dimen/dp_25"
           android:background="@drawable/shape_match"
           android:text="连接"
           android:textColor="@color/white"
           android:textSize="@dimen/sp_16"
           />
   </RelativeLayout>
</android.support.constraint.ConstraintLayout>