<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blank2"
    tools:context=".activity.TimerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/img_back2"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="周计划"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                />
            <TextView
                android:id="@+id/tv_save"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_40"
                android:text="保存"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@id/rl_head"
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            >
            <TextView
                android:id="@+id/tv_week1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="一"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/shape_week"
                />
            <TextView
                android:id="@+id/tv_week2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="二"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/shape_week2"
                />

            <TextView
                android:id="@+id/tv_week3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="三"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                />

            <TextView
                android:id="@+id/tv_week4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="四"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                />

            <TextView
                android:id="@+id/tv_week5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="五"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                />

            <TextView
                android:id="@+id/tv_week6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="六"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/tv_week7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="日"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                />
        </LinearLayout>
        <com.jwenfeng.library.pulltorefresh.PullToRefreshLayout
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/swipeRefresh"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_below="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:overScrollMode="never"
                />

        </com.jwenfeng.library.pulltorefresh.PullToRefreshLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>