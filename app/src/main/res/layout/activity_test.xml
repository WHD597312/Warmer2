        <!--android:layout_height="@dimen/dp_250"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:layout_marginTop="@dimen/dp_20"-->
        <!--/>-->

</RelativeLayout>