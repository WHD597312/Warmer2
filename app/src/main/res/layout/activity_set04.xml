<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Set01Activity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            >
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/img_back2"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                android:tint="@color/color_blank2"
                />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="掉电记忆"
                android:textSize="@dimen/sp_20"
                android:textColor="#333333"
                />
        </RelativeLayout>
        <TextView
            android:layout_below="@+id/rl_head"
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输出测试是测试用的，返回自动关闭"
            android:layout_marginLeft="@dimen/dp_15"
            android:visibility="gone"
            />
        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_below="@+id/rl_head"
            android:id="@+id/rl_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_wifi"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">
                <TextView
                    android:id="@+id/tv_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置值"
                    android:textColor="@color/color_blank4"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/sp_18"
                    />
                <TextView
                    android:id="@+id/tv_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关闭"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <ImageView
                android:id="@+id/img_state"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/img_close"
                android:layout_marginLeft="@dimen/dp_10"
                android:scaleType="centerInside"
                android:layout_marginBottom="@dimen/sp_20"
                />
        </LinearLayout>
        <Button
            android:id="@+id/btn_submit"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_below="@+id/rl_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_submit"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>